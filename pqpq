import rclpy
from rclpy.node import Node
from std_msgs.msg import String
import lgpio
import time

# DC 모터 2 핀 설정
IN_A2 = 23
IN_B2 = 24
PWM2 = 25  # PWM 제어 핀
EN_DIAG2 = 5

class DCMotor2Controller(Node):
    def __init__(self):
        super().__init__('dc_motor_2_controller')
        self.subscription = self.create_subscription(
            String, 'dc_motor_2_command', self.listener_callback, 10)
        self.chip = lgpio.gpiochip_open(0)
        lgpio.gpio_claim_output(self.chip, IN_A2, 0)
        lgpio.gpio_claim_output(self.chip, IN_B2, 0)
        lgpio.gpio_claim_output(self.chip, PWM2, 0)  # PWM 핀 설정
        lgpio.gpio_claim_output(self.chip, EN_DIAG2, 0)

        # diag/pwm activate
        lgpio.gpio_write(self.chip, EN_DIAG2, 1)

    def listener_callback(self, msg):
        command = msg.data.split()
        direction = command[0]
        speed = int(command[1])  # 속도는 0~100 범위여야 합니다.
        self.control_motor(direction, speed)

    def control_motor(self, direction, speed):
        if direction == 'forward':
            lgpio.gpio_write(self.chip, IN_A2, 1)
            lgpio.gpio_write(self.chip, IN_B2, 0)
        elif direction == 'backward':
            lgpio.gpio_write(self.chip, IN_A2, 0)
            lgpio.gpio_write(self.chip, IN_B2, 1)

        # 소프트웨어 PWM으로 속도 제어
        for i in range(100):  # 100번 반복 (소프트웨어 PWM 주기)
            if i < speed:  # 속도에 따라 PWM을 구현 (켜는 시간 조절)
                lgpio.gpio_write(self.chip, PWM2, 1)  # 모터 활성화
            else:
                lgpio.gpio_write(self.chip, PWM2, 0)  # 모터 비활성화
            time.sleep(0.01)  # 짧은 주기 대기 (PWM 주파수)

        self.get_logger().info(f'Motor 2: {direction} at speed {speed}%')

    def destroy_node(self):
        super().destroy_node()
        lgpio.gpiochip_close(self.chip)

def main(args=None):
    rclpy.init(args=args)
    motor_controller = DCMotor2Controller()
    rclpy.spin(motor_controller)
    motor_controller.destroy_node()
    rclpy.shutdown()

if __name__ == '__main__':
    main()
